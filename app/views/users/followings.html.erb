<h2><%= current_user==@user?"自分":@user.name%>がフォローしているリスト</h2>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.followings.each do |user| %>
    <tr>
      <td>
        <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      </td>
      <td><%= user.name %></td>
      <td>フォロー数:<%= user.followings.count %>人</td>
      <td>フォロワー数:<%= user.followers.count %>人</td>
      <td>
        <% if current_user != user %>
        <%= render 'users/follow', user: user %>
        <% end %>
      </td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>