<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, local:true do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <lable for="user_name">Name</lable>
          <%= f.text_field :name, autofocus: true, id:"user_name", placeholder:"名前", class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: 'form-control-file '%>
        </div>
        <div class="form-group">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofocus: true, id: "user_introduction", placeholder:"紹介", class:'form-control introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</main>