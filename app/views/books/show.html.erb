<main>
  <% if notice %>
　　<p><%= notice %></p>
  <% end %>
  <% if alert %>
   <p><%= alert %></p>
  <% end %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= render 'books/info', user: @user %>

        <h2 class="mt-3">New book</h2>
        <%= render 'books/form', book: @book %>

      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <div class="book_detail">
          <%= render 'books/detail', book: @book_show %>
        </div>

        <table class=<%= "comments_table_" + @book_show.id.to_s %>>
          <%= render 'book_comments/comments', book: @book_show, user: current_user %>
        </table>
        <div class="new-comment">
        <%= form_with(model:[@book_show, @book_comment], remote: true) do |f| %>
          <p><%= f.text_area :comment, rows:'5', id: 'comment_text', class: 'form-control' %></p>
          <p><%= f.submit "送信" %></p>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>