<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>Editing Book</h2>
        <%= form_with model:@book, local:true do |f| %>
        <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
        <div class="form-group">
          <lable for="user_name">Title</lable>
          <%= f.text_field :title, autofocus: true, id:"book_title", placeholder:"タイトル", class: 'form-control name' %>
        </div>
        <div class="form-group">
          <label for="book_body">Opinion</label>
          <%= f.text_area :body, autofocus: true, id: "book_body", placeholder:"オピニオン", class:'form-control introduction' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: 'btn btn-secondary' %>
        </div>
        <% end %>
        <%= link_to "Show", book_path(@book) %>
        |
        <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>